@{
    ViewBag.Title = "Admin Login";
}

<!-- تضمين مكتبة Font Awesome للأيقونات -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- صندوق تسجيل الدخول -->
            <div class="card">
                <div class="card-header text-center">
                    <h4>Login Admin</h4> <!-- عنوان الصفحة -->
                </div>
                <div class="card-body">
                    <!-- عرض رسالة الخطأ للبريد الإلكتروني -->
                    @if (ViewData.ModelState.ContainsKey("EmailError"))
                    {
                        <div class="alert alert-danger">
                            @ViewData.ModelState["EmailError"].Errors[0].ErrorMessage
                        </div>
                    }

                    <!-- عرض رسالة الخطأ لكلمة المرور -->
                    @if (ViewData.ModelState.ContainsKey("PasswordError"))
                    {
                        <div class="alert alert-danger">
                            @ViewData.ModelState["PasswordError"].Errors[0].ErrorMessage
                        </div>
                    }

                    <!-- نموذج تسجيل الدخول -->
                    <form asp-controller="Account" asp-action="AdminLogin" method="post">
                        <div class="form-group">
                            <label for="email">Email Address</label> <!-- النص العلوي -->
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label> <!-- النص العلوي -->
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button> <!-- زر تسجيل الدخول -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* إضافة مسافة بين البطاقة والفوتر */
    .card {
        margin-bottom: 150px; /* إضافة مسافة سفلية للبطاقة */
    }
    /* إضافة مسافات حول البطاقة */
    .container {
        padding: 15px; /* مسافة داخلية */
    }
</style>
<script>
    function togglePassword() {
        var passwordInput = document.getElementById("password");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
</script>