@{
    ViewBag.Title = "About";
}
<section id="about" class="about py-5">
    <div class="container">
        <div class="row">
            <!-- Card for the paragraph -->
            <div class="col-md-6">
                <div class="card about-card" style="border: none; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s;">
                    <div class="card-body">
                        <h2 class="card-title" style="color: black;">About the Library</h2>
                        <p class="card-text" style="color: black; margin-top: 20px; line-height: 1.6;">
                            Our online library aims to provide the latest books and educational resources
                            to meet the needs of students and researchers. We offer a wide range of books in various
                            scientific and literary fields. Our mission is to empower learners and researchers by
                            providing access to a diverse collection of digital materials, including academic journals,
                            e-books, and multimedia resources. We believe that knowledge is a key driver of personal and
                            societal growth, and our library is dedicated to supporting lifelong learning and fostering
                            a love for reading in our community.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Carousel for Images -->
            <div class="col-md-6">
                <div id="libraryCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/library-image1.jpg" class="d-block w-100" alt="Library Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/library-image2.jpG" class="d-block w-100" alt="Library Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/library-image3.jpg" class="d-block w-100" alt="Library Image 3">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/library-image4.jpg" class="d-block w-100" alt="Library Image 4">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#libraryCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#libraryCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
                         /* جعل قسم About أطول مع لون خلفية */
    .about {
        background-color: #f3f3f3; /* يمكن تغيير هذا اللون */
        height: auto; /* سمح للقسم بأن يكون بطول المحتوى */
        display: flex;
        align-items: center; /* لتوسيع المحتوى عمودياً */
    }

    /* تحسين تنسيق البراجراف */
    .card-text {
        color: black; /* لون النص */
        margin-top: 20px; /* مسافة من العنوان */
        line-height: 1.6; /* ارتفاع الخط */
        padding: 20px; /* مسافة داخلية للنص */
    }

    /* تأثير عند المرور فوق الكارد */
    .about-card:hover {
        transform: translateY(-10px); /* رفع الكارد للأعلى */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* إضافة ظل */
    }
</style>