@model Library_Management_System.Models.Book

@{
    ViewBag.Title = "Add New Book";
}

<style>
    .form-container {
        max-width: 600px; /* تحديد عرض النموذج */
        margin: 0 auto; /* وضع النموذج في المنتصف */
        padding: 20px; /* إضافة padding حول النموذج */
        background-color: #f9f9f9; /* خلفية للنموذج */
        border-radius: 10px; /* تدوير الحواف */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* إضافة ظل خفيف */
    }

        .form-container h2 {
            text-align: center; /* جعل العنوان في منتصف الصفحة */
            color: #333; /* لون النص */
        }

    .form-group label {
        font-weight: bold; /* جعل النص عريض */
        color: black; /* لون النص الأسود */
        margin-bottom: 10px; /* مسافة أسفل الـ label */
        display: block; /* عرض كبلوك */
    }

    .form-group input, .form-group select {
        margin-bottom: 20px; /* مسافة أسفل كل حقل */
        width: 100%; /* جعل العرض 100% */
        padding: 10px; /* إضافة مسافة داخلية */
        border: 1px solid #ccc; /* إطار الحقل */
        border-radius: 5px; /* تدوير الحواف */
    }

    .form-control::placeholder {
        color: #aaa; /* لون الـ placeholder */
    }
</style>

<div class="form-container">
    <h2 class="my-4">Add New Book</h2>
    <!-- Form لإضافة كتاب جديد -->
    <form action="/Admin/AddBook" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="BookTitle">Book Title</label>
            <input type="text" class="form-control" id="BookTitle" name="BookTitle" placeholder="Enter book title" required />
        </div>

        <div class="form-group">
            <label for="BookCategory">Book Category</label>
            <input type="text" class="form-control" id="BookCategory" name="BookCategory" placeholder="Enter book category" required />
        </div>

        <div class="form-group">
            <label for="BookAuthor">Book Author</label>
            <input type="text" class="form-control" id="BookAuthor" name="BookAuthor" placeholder="Enter author's name" required />
        </div>

        <div class="form-group">
            <label for="BookCopies">Number of Copies</label>
            <input type="number" class="form-control" id="BookCopies" name="BookCopies" placeholder="Enter number of copies" required />
        </div>

        <div class="form-group">
            <label for="BookISBN">ISBN</label>
            <input type="text" class="form-control" id="BookISBN" name="BookISBN" placeholder="Enter book ISBN" required />
        </div>

        <div class="form-group">
            <label for="BookDateAdded">Date Added</label>
            <input type="date" class="form-control" id="BookDateAdded" name="BookDateAdded" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="form-group">
            <label for="BookStatus">Book Status</label>
            <select class="form-control" id="BookStatus" name="BookStatus" required>
                <option value="" disabled selected>Select status</option>
                <option value="New">New</option>
                <option value="Old">Old</option>
                <option value="Damaged">Damaged</option>
            </select>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
